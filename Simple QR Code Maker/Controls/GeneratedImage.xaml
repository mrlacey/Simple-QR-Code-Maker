<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Simple_QR_Code_Maker.Controls.GeneratedImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Simple_QR_Code_Maker.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid
        Margin="4"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
		<Image
            x:Name="QrCodeImage"
            Width="285"
            Height="285"
            CanDrag="True"
            DragStarting="QrCodeImage_DragStarting"
            Source="{x:Bind Data.CodeAsBitmap, Mode=OneWay}"
            ToolTipService.ToolTip="{x:Bind Data.CodeAsText, Mode=OneWay}">
			<Image.ContextFlyout>
				<MenuFlyout>
					<MenuFlyoutItem
                        Name="ContextPngBtn"
                        Command="{Binding SaveCodePngContextCommand}"
                        Icon="Save"
                        Text="Save PNG..." />
					<MenuFlyoutItem
                        Name="ContextCopyPngBtn"
                        Command="{Binding CopyCodePngContextCommand}"
                        Icon="Copy"
                        Text="Copy PNG" />
					<MenuFlyoutSeparator />
					<MenuFlyoutItem
                        Name="ContextSvgBtn"
                        Command="{Binding SaveCodeSvgContextCommand}"
                        Icon="Save"
                        Text="Save SVG..." />
					<MenuFlyoutItem
                        Name="ContextCopySvgBtn"
                        Command="{Binding CopyCodeSvgContextCommand}"
                        Icon="Copy"
                        Text="Copy SVG" />
					<MenuFlyoutItem
                        Name="ContextCopySvgTextBtn"
                        Command="{Binding CopyCodeSvgTextContextCommand}"
                        Icon="Copy"
                        Text="Copy SVG as Text" />
				</MenuFlyout>
			</Image.ContextFlyout>
		</Image>
		<InfoBar
            IsOpen="{x:Bind Data.UrlWarning, Mode=OneWay}"
            Message="QR Code not a URL"
            Severity="Warning"
            ToolTipService.ToolTip="This warning can be disabled in settings" />
	</Grid>
</UserControl>
